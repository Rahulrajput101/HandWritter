        <LinearLayout
            android:id="@+id/item_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            >

            <ImageView
                android:id="@+id/item_download_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/download_icon"
                />

            <TextView
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:text="Download"
                android:fontFamily="@font/work_sans"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/item_rename_icon"
                app:layout_constraintStart_toEndOf="@+id/item_rename_icon"
                app:layout_constraintTop_toTopOf="@+id/item_rename_icon" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_download"
            >

            <ImageView
                android:id="@+id/item_pdf_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_picture_as_pdf_24"
                />

            <TextView
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Open PDF"
                android:fontFamily="@font/work_sans"
                android:layout_gravity="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/item_rename_icon"
                app:layout_constraintStart_toEndOf="@+id/item_rename_icon"
                app:layout_constraintTop_toTopOf="@+id/item_rename_icon" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_pdf"
            >

            <ImageView
                android:id="@+id/item_share_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_share_24"
                />

            <TextView
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Share"
                android:fontFamily="@font/work_sans"
                android:layout_gravity="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/item_rename_icon"
                app:layout_constraintStart_toEndOf="@+id/item_rename_icon"
                app:layout_constraintTop_toTopOf="@+id/item_rename_icon" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_rename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_share"
            >

            <ImageView
                android:id="@+id/item_rename_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_drive_file_rename_outline_24"
                />

            <TextView
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Rename"
                android:fontFamily="@font/work_sans"
                android:layout_gravity="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/item_rename_icon"
                app:layout_constraintStart_toEndOf="@+id/item_rename_icon"
                app:layout_constraintTop_toTopOf="@+id/item_rename_icon" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_delete_outline_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_rename">

            <ImageView
                android:id="@+id/item_delete_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_delete_outline_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_rename" />

            <TextView
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Delete"
                android:fontFamily="@font/work_sans"/>
        </LinearLayout>

        <TextView
            android:id="@+id/folder_date_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:fontFamily="@font/work_sans"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/folder_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/folder_name"
            app:layout_constraintTop_toBottomOf="@+id/folder_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>