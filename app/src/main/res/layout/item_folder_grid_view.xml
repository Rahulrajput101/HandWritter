<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="0dp"
                android:elevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/light_gre2"
                    android:padding="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="2dp"
                        app:cardCornerRadius="0dp"
                        >

                        <ImageView
                            android:id="@+id/iv_folder_icon_grid_view"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/ic_folder_50dp" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/ll_folder_details_grid_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/tv_folder_name_grid_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="folderName" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/et_folder_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Edit name"
                                android:inputType="textCapSentences|textMultiLine"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_folder_item_count_grid_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="count"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_folder_last_updated_grid_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="12/25/22 22:50"
                            android:textSize="11sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/iv_check_holder_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/check_box_holder"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_selected_item_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selected_item_icon"
                android:src="@drawable/ic_check_24"
                android:visibility="gone" />

        </FrameLayout>

        <ImageView
            android:id="@+id/iv_more_options"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_share_24" />

        <ImageView
            android:id="@+id/iv_rename_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/selected_item_icon"
            android:src="@drawable/ic_check_24"
            android:visibility="gone" />

        <CheckBox
            android:id = "@+id/grid_main_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="3dp"
            android:visibility="gone"
            />


    </FrameLayout>
</layout>