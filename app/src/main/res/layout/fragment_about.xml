<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:id="@+id/ab_back"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginTop="16dp"
              android:padding="5dp"
              android:src="@drawable/baseline_arrow_back_24"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


          <androidx.cardview.widget.CardView
              style="@style/Widget.Material3.CardView.Filled"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginStart="8dp"
              android:layout_marginTop="16dp"
              android:layout_marginEnd="8dp"
              android:layout_marginBottom="2dp"
              app:cardBackgroundColor="@android:color/background_light"
              app:cardCornerRadius="12dp"
              app:cardElevation="1dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/ab_back">


              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">


                  <ImageView
                      android:id="@+id/ab_imageView"
                      android:layout_width="100dp"
                      android:layout_height="100dp"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_bias="0.479"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.082"
                      app:srcCompat="@mipmap/ic_launcher" />

                  <TextView
                      android:id="@+id/ab_textView"

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="24dp"
                      android:text="Hand Writer"
                      android:textStyle="bold"
                      android:textSize="18sp"
                      android:fontFamily="@font/work_sans"
                      app:layout_constraintEnd_toEndOf="@+id/ab_imageView"
                      app:layout_constraintStart_toStartOf="@+id/ab_imageView"
                      app:layout_constraintTop_toBottomOf="@+id/ab_imageView" />

                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/ab_report_bug"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="16dp"
                      android:paddingBottom="12dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/ab_textView">

                      <ImageView
                          android:id="@+id/ab_imageView2"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginStart="16dp"
                          android:src="@drawable/report_us_icon"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintVertical_bias="0.5" />


                      <TextView
                          android:id="@+id/textView4"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="16dp"
                          android:text="Report Bugs"
                          android:fontFamily="@font/work_sans"
                          app:layout_constraintStart_toEndOf="@+id/ab_imageView2"
                          app:layout_constraintTop_toTopOf="parent" />

                      <TextView
                          android:id="@+id/textView9"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Report bug and give us some feedback"
                          android:textColor="@color/medium_gray"
                          android:textSize="12sp"
                          android:fontFamily="@font/work_sans"
                          app:layout_constraintStart_toStartOf="@+id/textView4"
                          app:layout_constraintTop_toBottomOf="@+id/textView4" />


                  </androidx.constraintlayout.widget.ConstraintLayout>


                  <LinearLayout
                      android:id="@+id/ab_contact_us"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingVertical="12dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/ab_report_bug">

                      <ImageView
                          android:id="@+id/ab_imageView7"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginStart="16dp"
                          android:src="@drawable/contact_us_icon" />

                      <TextView
                          android:id="@+id/textView8"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/work_sans"
                          android:layout_marginStart="16dp"
                          android:text="Contact us" />

                  </LinearLayout>


                  <LinearLayout
                      android:id="@+id/ab_licence"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingVertical="12dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/ab_contact_us">

                      <ImageView
                          android:id="@+id/ab_imageView3"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginStart="16dp"
                          android:src="@drawable/description_icon" />

                      <TextView
                          android:id="@+id/textView5"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="16dp"
                          android:fontFamily="@font/work_sans"
                          android:text="Licenses" />

                  </LinearLayout>


                  <LinearLayout
                      android:id="@+id/ab_privacy"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingVertical="12dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/ab_licence">

                      <ImageView
                          android:id="@+id/ab_imageView4"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginStart="16dp"
                          android:src="@drawable/description_icon" />

                      <TextView
                          android:id="@+id/textView6"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="16dp"
                          android:fontFamily="@font/work_sans"
                          android:text="Privacy Policy" />

                  </LinearLayout>

                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/ab_version"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingVertical="12dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/ab_privacy">

                      <ImageView
                          android:id="@+id/imageView2"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginStart="16dp"
                          android:src="@drawable/version_icon"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintVertical_bias="0.5" />

                      <TextView
                          android:id="@+id/textView10"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="16dp"
                          android:text="Version"
                          android:fontFamily="@font/work_sans"
                          app:layout_constraintStart_toEndOf="@+id/imageView2"
                          app:layout_constraintTop_toTopOf="parent" />

                      <TextView
                          android:id="@+id/textView11"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/work_sans"
                          android:text="0.0.1"
                          android:textColor="@color/medium_gray"
                          android:textSize="12sp"
                          app:layout_constraintStart_toStartOf="@+id/textView10"
                          app:layout_constraintTop_toBottomOf="@+id/textView10" />

                  </androidx.constraintlayout.widget.ConstraintLayout>

                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/ab_instagram"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingVertical="12dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/ab_version">

                      <ImageView
                          android:id="@+id/imageView3"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:layout_gravity="center"
                          android:layout_marginStart="16dp"
                          android:src="@drawable/instagram_icon"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintVertical_bias="0.5" />

                      <TextView
                          android:id="@+id/textView13"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="16dp"
                          android:text="Follow us on Instagram"
                          android:fontFamily="@font/work_sans"
                          app:layout_constraintStart_toEndOf="@+id/imageView3"
                          app:layout_constraintTop_toTopOf="parent" />

                      <TextView
                          android:id="@+id/textView14"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/work_sans"
                          android:text="Follow us on Instagram to get our latest updates"
                          android:textColor="@color/medium_gray"
                          android:textSize="12sp"
                          app:layout_constraintStart_toStartOf="@+id/textView13"
                          app:layout_constraintTop_toBottomOf="@+id/textView13" />

                  </androidx.constraintlayout.widget.ConstraintLayout>

                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/ab_telegram"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingVertical="12dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/ab_instagram">

                      <ImageView
                          android:id="@+id/imageView5"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:layout_gravity="center"
                          android:layout_marginStart="16dp"
                          android:src="@drawable/linkedin_rounded_border_svgrepo_com"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintVertical_bias="0.5" />

                      <TextView
                          android:id="@+id/textView16"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="16dp"
                          android:fontFamily="@font/work_sans"
                          android:text="Follow us on Linkedin"
                          app:layout_constraintBottom_toTopOf="@+id/textView17"
                          app:layout_constraintStart_toEndOf="@+id/imageView5"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintVertical_bias="0.5" />

                      <TextView
                          android:id="@+id/textView17"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/work_sans"
                          android:text="To learn more, connect with us on Linkedin"
                          android:textColor="@color/medium_gray"
                          android:textSize="12sp"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="@+id/textView16"
                          app:layout_constraintTop_toBottomOf="@+id/textView16"
                          app:layout_constraintVertical_bias="0.5" />

                  </androidx.constraintlayout.widget.ConstraintLayout>

                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/ab_play_store"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingVertical="12dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/ab_telegram">

                      <ImageView
                          android:id="@+id/imageView4"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:layout_gravity="center"
                          android:layout_marginStart="16dp"
                          android:src="@drawable/playstore_icon"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent" />

                      <TextView
                          android:id="@+id/textView12"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="16dp"
                          android:fontFamily="@font/work_sans"
                          android:text="Checkout our other apps"
                          app:layout_constraintStart_toEndOf="@+id/imageView4"
                          app:layout_constraintTop_toTopOf="parent" />

                      <TextView
                          android:id="@+id/textView15"
                          style="@style/Widget.AppCompat.TextView.SpinnerItem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/work_sans"
                          android:text="Visit our developer page and checkout our \nother apps"
                          android:textColor="@color/medium_gray"
                          android:textSize="12sp"
                          app:layout_constraintStart_toStartOf="@+id/textView12"
                          app:layout_constraintTop_toBottomOf="@+id/textView12" />

                  </androidx.constraintlayout.widget.ConstraintLayout>

              </androidx.constraintlayout.widget.ConstraintLayout>
          </androidx.cardview.widget.CardView>

          <TextView
              android:id="@+id/textView3"
              style="@style/Widget.AppCompat.TextView.SpinnerItem"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:text="About"
              android:textStyle="bold"
              android:textSize="20sp"
              app:layout_constraintBottom_toBottomOf="@+id/ab_back"
              app:layout_constraintStart_toEndOf="@+id/ab_back"
              app:layout_constraintTop_toTopOf="@+id/ab_back" />
      </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
