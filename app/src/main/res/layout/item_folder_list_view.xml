<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_folder_icon_list_view"
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_folder_50dp" />

                    <LinearLayout
                        android:id="@+id/ll_folder_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_folder_name_list_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/work_sans"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="start"
                                android:maxWidth="160dp"
                                android:maxLines="1"
                                android:text="folderName"
                                android:textColor="@android:color/black" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/et_folder_name_list_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Edit name"
                                android:inputType="textCapSentences|textMultiLine"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_folder_item_count_list_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="count"
                            android:visibility="gone"
                            android:textSize="11sp"
                            android:textColor="@android:color/black"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_folder_last_updated_list_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="12/25/22 22:50"
                                android:textSize="10sp"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/iv_check_holder_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/check_box_holder"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_selected_item_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selected_item_icon"
                        android:src="@drawable/ic_check_24"
                        android:visibility="gone" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more_options_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:src="@drawable/more_horizontal"/>

        <ImageView
            android:id="@+id/iv_rename_done_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="15dp"
            android:background="@drawable/selected_item_icon"
            android:src="@drawable/ic_check_24"
            android:visibility="gone" />

        <CheckBox
            android:id = "@+id/list_main_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="3dp"
            android:visibility="gone"
            />


    </FrameLayout>
</layout>